<h2>Edit a Movie</h2>
<form action="/movies/{{_id}}/edit" method="POST">
    <label for="">
        Title
        <input type="text" name="title" value="{{title}}">
    </label>
        <label for="">
        Genre
        <input type="text" name="genre" value="{{genre}}">
    </label>
        <label for="">
        Plot
        <input type="text" name="plot" value="{{plot}}">
    </label>
    <label for="">
        Cast
        <select name="cast" id="cast" multiple>
            {{#each cast}}
  <option value="{{_id}}">{{name}}</option>
            {{/each}}
  
</select>
    </label>
     <button type="submit">Submit</button>
</form>